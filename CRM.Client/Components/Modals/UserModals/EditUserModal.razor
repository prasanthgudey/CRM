@using CRM.Client.DTOs.Users
@using CRM.Client.DTOs.Roles
@using CRM.Client.Services.Users
@using CRM.Client.Services.Roles
@inject UserService UserService
@inject RoleService RoleService
@inject IJSRuntime JSRuntime

@if (IsOpen && User != null)
{
    <div class="modal-backdrop d-flex align-items-center justify-content-center">
        <div class="modal-card shadow"
             style="width: 450px; border-radius: 12px; padding: 22px; background: white;">

            <h5 class="mb-3 text-center">Edit User</h5>

            @if (!string.IsNullOrWhiteSpace(Message))
            {
                <div class="alert alert-info py-2">@Message</div>
            }

        <EditForm EditContext="editContext" OnValidSubmit="Save">
            <DataAnnotationsValidator />

            <!-- Full Name -->
            <div class="form-group">
                <label class="small text-muted">Full Name</label>
                <InputText class="form-control"
                           placeholder="Enter full name"
                           @bind-Value="EditModel.FullName" />

                <ValidationMessage For="@(() => EditModel.FullName)" />
            </div>

            <!-- Email -->
            <div class="form-group mt-2">
                <label class="small text-muted">Email</label>
                <InputText class="form-control"
                           placeholder="Enter email"
                           @bind-Value="EditModel.Email" />

                <ValidationMessage For="@(() => EditModel.Email)" />
            </div>

            <!-- Role Dropdown -->
            <div class="form-group mt-3">
                <label class="small text-muted">Select Role</label>

                <div class="role-dropdown-container position-relative">

                    <div class="role-selected" @onclick="ToggleDropdown">
                        @(string.IsNullOrWhiteSpace(EditModel.Role)
                                                ? "-- Select a role --"
                                                : EditModel.Role)
                    </div>

                    @if (IsDropdownOpen)
                        {
                            <div class="role-dropdown-list shadow-sm">
                                @foreach (var r in Roles ?? new List<RoleResponseDto>())
                                {
                                    <div class="role-item" @onclick="() => SelectRole(r.Name)">
                                        @r.Name
                                    </div>
                                }
                            </div>
                        }
                    </div>

                    <ValidationMessage For="@(() => EditModel.Role)" />
                </div>

                <!-- Buttons -->
                <div class="modal-actions mt-4 d-flex justify-content-end gap-2">
                    <button type="button"
                            class="btn btn-outline-secondary"
                            @onclick="Cancel">
                        Cancel
                    </button>

                    <button type="submit"
                            class="btn btn-primary"
                            disabled="@IsLoading">
                        @(IsLoading ? "Saving..." : "Save")
                    </button>
                </div>

            </EditForm>
        </div>
    </div>
}

@code {

    [Parameter] public bool IsOpen { get; set; }
    [Parameter] public UserResponseDto? User { get; set; }
    [Parameter] public EventCallback<bool> OnClose { get; set; }

    private EditContext editContext;
    private UpdateUserDto EditModel { get; set; } = new();
    private List<RoleResponseDto>? Roles { get; set; }

    private bool IsLoading;
    private string? Message;
    private bool IsDropdownOpen = false;

    protected override async Task OnParametersSetAsync()
    {
        if (IsOpen && User != null)
        {
            EditModel = new UpdateUserDto
            {
                FullName = User.FullName,
                Email = User.Email,
                Role = User.Role
            };

            editContext = new EditContext(EditModel);

            Roles = await RoleService.GetAllRolesAsync();
            Message = null;
        }
    }

    private void ToggleDropdown()
        => IsDropdownOpen = !IsDropdownOpen;

    private void SelectRole(string role)
    {
        EditModel.Role = role;
        IsDropdownOpen = false;

        var field = new FieldIdentifier(EditModel, nameof(UpdateUserDto.Role));
        editContext.NotifyFieldChanged(field);
    }

    private async Task Save()
    {
        if (User == null) return;

        IsLoading = true;
        Message = null;

        try
        {
            await UserService.UpdateUserAsync(User.Id, EditModel);

            await JSRuntime.InvokeVoidAsync("Swal.fire",
                "Success",
                "User updated successfully.",
                "success");

            // RESET MODEL AFTER SAVE
            EditModel = new UpdateUserDto();
            editContext = new EditContext(EditModel);

            await Task.Delay(600);
            await OnClose.InvokeAsync(false);
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("Swal.fire",
                "Error",
                ex.Message ?? "Failed to update user.",
                "error");
        }
        finally
        {
            IsLoading = false;
        }
    }



    private async Task Cancel()
    {
        EditModel = new UpdateUserDto();         // reset model
        editContext = new EditContext(EditModel); // reset validation
        await OnClose.InvokeAsync(false);
    }

}
