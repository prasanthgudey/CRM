@using CRM.Client.DTOs.Users
@using CRM.Client.Services.Users
@inject UserService UserService
@inject IJSRuntime JSRuntime

@if (IsOpen && User != null)
{
    <div class="modal-backdrop d-flex align-items-center justify-content-center">
        <div class="modal-card shadow" style="width: 420px; border-radius: 12px; padding: 18px; background: white;">
            <h5 class="mb-3 text-center">Edit User</h5>

            @if (!string.IsNullOrWhiteSpace(Message))
            {
                <div class="alert alert-info py-2">@Message</div>
            }

            <EditForm Model="EditModel" OnValidSubmit="Save">
                <DataAnnotationsValidator />

                <div class="form-group">
                    <label class="small text-muted">Full Name</label>
                    <InputText class="form-control" placeholder="Enter full name" @bind-Value="EditModel.FullName" />
                </div>

                <div class="form-group mt-2">
                    <label class="small text-muted">Email</label>
                    <InputText class="form-control" placeholder="Enter email address" @bind-Value="EditModel.Email" />
                </div>

                <div class="form-group mt-2">
                    <label class="small text-muted">Role</label>
                    <InputSelect class="form-control" @bind-Value="EditModel.Role">
                        <option value="">-- Select a role --</option>
                        <option value="Admin">Admin</option>
                        <option value="Manager">Manager</option>
                        <option value="User">User</option>
                    </InputSelect>
                </div>

                <div class="modal-actions mt-4 d-flex justify-content-end gap-2">
                    <button type="button" class="btn btn-outline-secondary" @onclick="Cancel">Cancel</button>
                    <button class="btn btn-primary" disabled="@IsLoading">@((IsLoading) ? "Saving..." : "Save")</button>
                </div>
            </EditForm>
        </div>
    </div>
}

@code {
    [Parameter] public bool IsOpen { get; set; }
    [Parameter] public UserResponseDto? User { get; set; }
    [Parameter] public EventCallback<bool> OnClose { get; set; }

    private UpdateUserDto EditModel { get; set; } = new UpdateUserDto();
    private bool IsLoading { get; set; }
    private string? Message { get; set; }

    // JS interop guard
    private bool _isInteractive = false;

    protected override Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            _isInteractive = true;
        }
        return base.OnAfterRenderAsync(firstRender);
    }

    protected override void OnParametersSet()
    {
        if (User != null)
        {
            EditModel = new UpdateUserDto
            {
                FullName = User.FullName,
                Email = User.Email,
                Role = User.Role
            };
            Message = null;
        }
    }

    // Safe wrapper for crmAlerts calls
    private async Task ShowAlertAsync(string kind, string text)
    {
        if (!_isInteractive)
        {
            // fallback to inline message until JS is ready
            Message = text;
            return;
        }

        try
        {
            if (kind.Equals("success", StringComparison.OrdinalIgnoreCase))
                await JSRuntime.InvokeVoidAsync("crmAlerts.showSuccess", text);
            else if (kind.Equals("error", StringComparison.OrdinalIgnoreCase))
                await JSRuntime.InvokeVoidAsync("crmAlerts.showError", text);
            else if (kind.Equals("warning", StringComparison.OrdinalIgnoreCase))
                await JSRuntime.InvokeVoidAsync("crmAlerts.showWarning", text);
            else
                await JSRuntime.InvokeVoidAsync("crmAlerts.showInfo", text);
        }
        catch
        {
            // if JS fails for any reason, show inline message
            Message = text;
        }
    }

    // Simple email validator
    private bool IsValidEmail(string? email)
    {
        if (string.IsNullOrWhiteSpace(email)) return false;
        try
        {
            var addr = new System.Net.Mail.MailAddress(email);
            return addr.Address == email;
        }
        catch
        {
            return false;
        }
    }

    private async Task Save()
    {
        if (User == null) return;

        // Client-side validation
        if (string.IsNullOrWhiteSpace(EditModel.FullName))
        {
            await ShowAlertAsync("warning", "Please enter full name.");
            return;
        }

        if (string.IsNullOrWhiteSpace(EditModel.Email) || !IsValidEmail(EditModel.Email))
        {
            await ShowAlertAsync("warning", "Please enter a valid email address.");
            return;
        }

        if (string.IsNullOrWhiteSpace(EditModel.Role))
        {
            await ShowAlertAsync("warning", "Please select a role.");
            return;
        }

        IsLoading = true;
        Message = null;

        try
        {
            // If your UserService.UpdateUserAsync throws on error, we handle exceptions below.
            await UserService.UpdateUserAsync(User.Id, EditModel);

            Message = "User updated successfully.";

            await ShowAlertAsync("success", "User updated successfully.");

            await Task.Delay(700);
            await OnClose.InvokeAsync(false);
        }
        catch (Exception ex)
        {
            // Get a normalized message to inspect
            var msg = ex.Message ?? string.Empty;
            var lower = msg.ToLowerInvariant();

            // Duplicate detection: prefer explicit keywords
            if (lower.Contains("exists") || lower.Contains("already") || lower.Contains("duplicate"))
            {
                // Distinguish role vs user messages (if server mentions role/email)
                if (lower.Contains("role"))
                {
                    Message = "Role already exists.";
                    await ShowAlertAsync("error", "Role already exists.");
                }
                else if (lower.Contains("email"))
                {
                    Message = "Email already in use.";
                    await ShowAlertAsync("error", "Email already in use.");
                }
                else
                {
                    Message = "User already exists.";
                    await ShowAlertAsync("error", "User already exists.");
                }
            }
            else
            {
                // Generic failure
                Message = "Failed to update user.";
                await ShowAlertAsync("error", "Failed to update user.");
            }
        }
        finally
        {
            IsLoading = false;
        }
    }

    private async Task Cancel()
    {
        Message = null;
        await OnClose.InvokeAsync(false);   // cancel -> no alert
    }
}
