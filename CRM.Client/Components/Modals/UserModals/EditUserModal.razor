@using CRM.Client.DTOs.Users
@using CRM.Client.DTOs.Roles
@using CRM.Client.Services.Users
@using CRM.Client.Services.Roles
@inject UserService UserService
@inject RoleService RoleService
@inject IJSRuntime JSRuntime

@if (IsOpen && User != null)
{
    <div class="modal-backdrop d-flex align-items-center justify-content-center">
        <div class="modal-card shadow"
             style="width: 450px; border-radius: 12px; padding: 22px; background: white;">

            <h5 class="mb-3 text-center">Edit User</h5>

            @if (!string.IsNullOrWhiteSpace(Message))
            {
                <div class="alert alert-info py-2">@Message</div>
            }

            <EditForm Model="EditModel" OnValidSubmit="Save">
                <DataAnnotationsValidator />

                <!-- Full Name -->
                <div class="form-group">
                    <label class="small text-muted">Full Name</label>
                    <InputText class="form-control"
                               placeholder="Enter full name"
                               @bind-Value="EditModel.FullName" />
                </div>

                <!-- Email -->
                <div class="form-group mt-2">
                    <label class="small text-muted">Email</label>
                    <InputText class="form-control"
                               placeholder="Enter email"
                               @bind-Value="EditModel.Email" />
                </div>

                <!-- Role (Dynamic + Scrollable) -->
                <div class="form-group mt-3">
                    <label class="small text-muted">Select Role</label>

                    <div class="role-dropdown-container">
                        <div class="role-selected" @onclick="ToggleDropdown">
                            @(SelectedRole ?? "-- Select a role --")
                        </div>

                        @if (IsDropdownOpen)
                        {
                            <div class="role-dropdown-list">
                                @foreach (var r in Roles)
                                {
                                    <div class="role-item" @onclick="() => SelectRole(r.Name)">
                                        @r.Name
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>

                <!-- Buttons -->
                <div class="modal-actions mt-4 d-flex justify-content-end gap-2">
                    <button type="button"
                            class="btn btn-outline-secondary"
                            @onclick="Cancel">
                        Cancel
                    </button>

                    <button class="btn btn-primary" disabled="@IsLoading">
                        @(IsLoading ? "Saving..." : "Save")
                    </button>
                </div>

            </EditForm>
        </div>
    </div>
}

@code {

    [Parameter] public bool IsOpen { get; set; }
    [Parameter] public UserResponseDto? User { get; set; }
    [Parameter] public EventCallback<bool> OnClose { get; set; }

    private UpdateUserDto EditModel { get; set; } = new();
    private List<RoleResponseDto> Roles = new();

    private bool IsLoading;
    private string? Message;
    private bool IsDropdownOpen = false;

    private string? SelectedRole;

    protected override async Task OnParametersSetAsync()
    {
        if (User != null)
        {
            EditModel = new UpdateUserDto
            {
                FullName = User.FullName,
                Email = User.Email,
                Role = User.Role
            };

            SelectedRole = User.Role;

            Roles = await RoleService.GetAllRolesAsync();
        }
    }

    private void ToggleDropdown() => IsDropdownOpen = !IsDropdownOpen;

    private void SelectRole(string role)
    {
        SelectedRole = role;
        EditModel.Role = role;
        IsDropdownOpen = false;
            Message = null;
        }
    

    // Safe wrapper for crmAlerts calls
    private async Task ShowAlertAsync(string kind, string text)
    {
        if (!_isInteractive)
        {
            // fallback to inline message until JS is ready
            Message = text;
            return;
        }

        try
        {
            if (kind.Equals("success", StringComparison.OrdinalIgnoreCase))
                await JSRuntime.InvokeVoidAsync("crmAlerts.showSuccess", text);
            else if (kind.Equals("error", StringComparison.OrdinalIgnoreCase))
                await JSRuntime.InvokeVoidAsync("crmAlerts.showError", text);
            else if (kind.Equals("warning", StringComparison.OrdinalIgnoreCase))
                await JSRuntime.InvokeVoidAsync("crmAlerts.showWarning", text);
            else
                await JSRuntime.InvokeVoidAsync("crmAlerts.showInfo", text);
        }
        catch
        {
            // if JS fails for any reason, show inline message
            Message = text;
        }
    }

    // Simple email validator
    private bool IsValidEmail(string? email)
    {
        if (string.IsNullOrWhiteSpace(email)) return false;
        try
        {
            var addr = new System.Net.Mail.MailAddress(email);
            return addr.Address == email;
        }
        catch
        {
            return false;
        }
    }

    private async Task Save()
    {
        if (User == null) return;

        IsLoading = true;
        Message = null;

        try
        {
            await UserService.UpdateUserAsync(User.Id, EditModel);

            await JSRuntime.InvokeVoidAsync("crmAlerts.showSuccess", "User updated successfully.");

            await Task.Delay(700);
            await OnClose.InvokeAsync(false);
        }
        catch
        {
            await JSRuntime.InvokeVoidAsync("crmAlerts.showError", "Failed to update user.");
        }
        finally
        {
            IsLoading = false;
        }
    }

    private async Task Cancel()
    {
        await OnClose.InvokeAsync(false);
    }
}
