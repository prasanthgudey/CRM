@using CRM.Client.DTOs.Users
@using CRM.Client.DTOs.Roles
@using CRM.Client.Services.Users
@using CRM.Client.Services.Roles
@inject UserService UserService
@inject RoleService RoleService
@inject IJSRuntime JSRuntime

@if (IsOpen)
{
    <div class="modal-backdrop d-flex align-items-center justify-content-center">

        <div class="modal-card shadow"
             style="
                    width: 540px;
                    border-radius: 14px;
                    padding: 32px 36px;
                    background: white;">

            <h5 class="text-center mb-3">Invite New User</h5>

            @if (!string.IsNullOrWhiteSpace(Message))
            {
                <div class="alert alert-info py-2">@Message</div>
            }

        <EditForm EditContext="editContext" OnValidSubmit="SendInvite">
            <DataAnnotationsValidator />

            <!-- Full Name -->
            <div class="form-group">
                <label class="small text-muted">Full Name</label>

                <InputText class="form-control"
                           placeholder="Enter user's full name"
                           @bind-Value="InviteModel.FullName" />

                <ValidationMessage For="@(() => InviteModel.FullName)" />
            </div>

            <!-- Email -->
            <div class="form-group mt-2">
                <label class="small text-muted">Email Address</label>

                <InputText class="form-control"
                           placeholder="Enter user's email address"
                           @bind-Value="InviteModel.Email" />

                <ValidationMessage For="@(() => InviteModel.Email)" />
            </div>

            <!-- Role Dropdown -->
            <div class="form-group mt-2">
                <label class="small text-muted">Select Role</label>

                <div class="role-dropdown-container position-relative">

                    <div class="role-selected" @onclick="ToggleDropdown">
                        @(string.IsNullOrWhiteSpace(InviteModel.Role)
                                                ? "-- Select a role --"
                                                : InviteModel.Role)
                    </div>

                    @if (ShowDropdown)
                        {
                            <div class="role-dropdown-list shadow-sm">
                                @foreach (var r in Roles ?? new List<RoleResponseDto>())
                                {
                                    <div class="role-item" @onclick="() => SelectRole(r.Name)">
                                        @r.Name
                                    </div>
                                }
                            </div>
                        }
                    </div>

                    <ValidationMessage For="@(() => InviteModel.Role)" />
                </div>

                <!-- Buttons -->
                <div class="modal-actions mt-3 d-flex justify-content-end gap-2">
                    <button type="button"
                            class="btn btn-outline-secondary"
                            @onclick="Cancel">
                        Cancel
                    </button>

                    <button type="submit"
                            class="btn btn-primary"
                            disabled="@IsLoading">
                        @(IsLoading ? "Sending..." : "Send Invite")
                    </button>
                </div>

            </EditForm>

        </div>
    </div>
}

@code {
    [Parameter] public bool IsOpen { get; set; }
    [Parameter] public EventCallback<bool> OnClose { get; set; }
    private EditContext editContext;

    private InviteUserDto InviteModel { get; set; } = new();
    private List<RoleResponseDto>? Roles { get; set; }

    private bool ShowDropdown = false;
    private bool IsLoading;
    private string? Message;

    protected override async Task OnParametersSetAsync()
    {
        if (IsOpen)
        {
            InviteModel = new InviteUserDto();
            editContext = new EditContext(InviteModel);   // <--- IMPORTANT!

            Roles = await RoleService.GetAllRolesAsync();
        }
    }


    private void ToggleDropdown()
    {
        ShowDropdown = !ShowDropdown;
    }

    private void SelectRole(string role)
    {
        InviteModel.Role = role;
        ShowDropdown = false;

        editContext.NotifyFieldChanged(FieldIdentifier.Create(() => InviteModel.Role));

    }

    private async Task SendInvite()
    {
        IsLoading = true;
        Message = null;

        try
        {
            var result = await UserService.InviteUserAsync(InviteModel);

            if (result != null && !result.Success)
            {
                await JSRuntime.InvokeVoidAsync("crmAlerts.showError", result.Message ?? "User already exists");
                IsLoading = false;
                return;
            }

            await JSRuntime.InvokeVoidAsync("crmAlerts.showSuccess", "Invitation sent successfully!");

            InviteModel = new InviteUserDto(); // reset form

            await Task.Delay(400);
            await OnClose.InvokeAsync(true);
        }
        catch
        {
            await JSRuntime.InvokeVoidAsync("crmAlerts.showError", "Failed to send invite");
        }
        finally
        {
            IsLoading = false;
        }
    }

    private async Task Cancel()
    {
        Message = null;
        await OnClose.InvokeAsync(false);
    }
    

   

}
