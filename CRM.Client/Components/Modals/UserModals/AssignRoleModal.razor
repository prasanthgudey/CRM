@using CRM.Client.DTOs.Roles
@using CRM.Client.Services.Roles
@inject RoleService RoleService
@inject IJSRuntime JSRuntime    

@if (IsOpen)
{
    <div class="modal-backdrop d-flex align-items-center justify-content-center">
        <div class="modal-card shadow"
             style="width: 360px; border-radius: 12px; padding: 20px; background: white;">

            <h5 class="mb-3 text-center">Assign Role</h5>

            @if (!string.IsNullOrWhiteSpace(Message))
            {
                <div class="alert alert-info py-2">
                    @Message
                </div>
            }

            <EditForm Model="AssignModel" OnValidSubmit="AssignRole">
                <DataAnnotationsValidator />

                <!-- ✅ ROLE SELECTION -->
                <div class="form-group mt-3">
                    <label class="small text-muted">Select Role</label>
                    <select class="form-control"
                            @bind="AssignModel.RoleName">
                        <option value="">-- Choose a role --</option>
                        <option value="Admin">Admin</option>
                        <option value="Manager">Manager</option>
                        <option value="User">User</option>
                    </select>
                </div>

                <!-- ✅ ACTION BUTTONS -->
                <div class="modal-actions mt-4 d-flex justify-content-end gap-2">
                    <button type="button"
                            class="btn btn-outline-secondary"
                            @onclick="Close">
                        Cancel
                    </button>

                    <button class="btn btn-success"
                            disabled="@IsLoading">
                        @(IsLoading ? "Assigning..." : "Assign Role")
                    </button>
                </div>
            </EditForm>

        </div>
    </div>
}

@code {

    [Parameter] public bool IsOpen { get; set; }

    [Parameter] public string? UserId { get; set; }

    [Parameter] public EventCallback<bool> OnClose { get; set; }

    private AssignRoleDto AssignModel { get; set; } = new AssignRoleDto();

    private bool IsLoading { get; set; }

    private string? Message { get; set; }

    protected override void OnParametersSet()
    {
        AssignModel = new AssignRoleDto
        {
            UserId = UserId ?? string.Empty
        };
    }

    private async Task AssignRole()
    {
        if (string.IsNullOrWhiteSpace(AssignModel.RoleName))
        {
            Message = "Please select a role.";
            return;
        }

        IsLoading = true;
        Message = null;

        try
        {
            await RoleService.AssignRoleAsync(AssignModel);

            // ⭐ NEW – SweetAlert success popup
            await JSRuntime.InvokeVoidAsync("crmAlerts.showSuccess", "Role assigned successfully.");

            // (optional) no need to show message inside modal now, SweetAlert already shows it
            // Message = "Role assigned successfully.";

            await Task.Delay(500);
            await OnClose.InvokeAsync(false);
        }
        catch
        {
            Message = "Failed to assign role.";

            // ⭐ NEW – SweetAlert error popup
            await JSRuntime.InvokeVoidAsync("crmAlerts.showError", "Failed to assign role.");
        }
        finally
        {
            IsLoading = false;
        }
    }


    private async Task Close()
    {
        Message = null;
        await OnClose.InvokeAsync(false);
    }
}
