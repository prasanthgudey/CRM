@using CRM.Client.DTOs.Roles
@using CRM.Client.Services.Roles
@inject RoleService RoleService
@inject IJSRuntime JSRuntime

@if (IsOpen)
{
    <div class="modal-backdrop d-flex align-items-center justify-content-center">
        <div class="modal-card shadow"
             style="width: 500px; padding: 28px 32px; border-radius: 14px; background:white;">

            <h5 class="text-center mb-3">Assign Role</h5>

            @if (!string.IsNullOrWhiteSpace(Message))
            {
                <div class="alert alert-info py-2">@Message</div>
            }

        <EditForm Model="AssignModel" OnValidSubmit="AssignRole">
            <DataAnnotationsValidator />

            <!-- ROLE DROPDOWN -->
            <div class="form-group mt-3">
                <label class="small text-muted">Select Role</label>

                <div class="role-dropdown-container position-relative">

                    <!-- Selected Role -->
                    <div class="role-selected" @onclick="ToggleDropdown">
                        @(string.IsNullOrWhiteSpace(AssignModel.RoleName)
                                                ? "-- Select a role --"
                                                : AssignModel.RoleName)
                    </div>

                        <!-- Dropdown List -->
                    @if (ShowDropdown && Roles != null)
                        {
                            <div class="role-dropdown-list shadow-sm">
                                @foreach (var role in Roles)
                                {
                                    <div class="role-item"
                                         @onclick="() => SelectRole(role.Name)">
                                        @role.Name
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>

                <!-- ACTION BUTTONS -->
                <div class="modal-actions mt-4 d-flex justify-content-end gap-2">
                    <button type="button"
                            class="btn btn-outline-secondary"
                            @onclick="Close">
                        Cancel
                    </button>

                    <button type="submit"
                            class="btn btn-success"
                            disabled="@IsLoading">
                        @(IsLoading ? "Assigning..." : "Assign Role")
                    </button>
                </div>
            </EditForm>

        </div>
    </div>
}

@code {

    [Parameter] public bool IsOpen { get; set; }
    [Parameter] public string? UserId { get; set; }
    [Parameter] public EventCallback<bool> OnClose { get; set; }

    private AssignRoleDto AssignModel { get; set; } = new();
    private List<RoleResponseDto>? Roles;

    private bool IsLoading;
    private bool ShowDropdown;
    private string? Message;

    protected override async Task OnParametersSetAsync()
    {
        if (!IsOpen)
            return;

        AssignModel = new AssignRoleDto
        {
            UserId = UserId ?? string.Empty
        };

        ShowDropdown = false;
        Message = null;

        Roles = await RoleService.GetAllRolesAsync();
    }

    private void ToggleDropdown()
    {
        ShowDropdown = !ShowDropdown;
    }

    private void SelectRole(string role)
    {
        AssignModel.RoleName = role;
        ShowDropdown = false;
    }

    private async Task AssignRole()
    {
        if (string.IsNullOrWhiteSpace(AssignModel.RoleName))
        {
            await JSRuntime.InvokeVoidAsync("Swal.fire",
                "Validation",
                "Please select a role.",
                "warning");
            return;
        }

        IsLoading = true;

        try
        {
            await RoleService.AssignRoleAsync(AssignModel);

            await JSRuntime.InvokeVoidAsync("Swal.fire",
                "Success",
                "Role assigned successfully!",
                "success");

            await Task.Delay(500);
            await OnClose.InvokeAsync(true);
        }
        catch
        {
            await JSRuntime.InvokeVoidAsync("Swal.fire",
                "Error",
                "Failed to assign role.",
                "error");
        }
        finally
        {
            IsLoading = false;
        }
    }

    private async Task Close()
    {
        ShowDropdown = false;
        await OnClose.InvokeAsync(false);
    }
}
