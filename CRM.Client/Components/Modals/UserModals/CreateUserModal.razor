@using CRM.Client.DTOs.Users
@using CRM.Client.Services.Users
@inject UserService UserService

@if (IsOpen)
{
    <div class="modal-backdrop d-flex align-items-center justify-content-center">
        <div class="modal-card shadow"
             style="width: 400px; border-radius: 12px; padding: 20px; background: white;">

            <h5 class="mb-3 text-center">Create New User</h5>

            @if (!string.IsNullOrWhiteSpace(Message))
            {
                <div class="alert alert-info py-2">
                    @Message
                </div>
            }

            <EditForm Model="CreateModel" OnValidSubmit="CreateUser">
                <DataAnnotationsValidator />

                <!-- ✅ FULL NAME -->
                <div class="form-group mt-3">
                    <label class="small text-muted">Full Name</label>
                    <InputText class="form-control"
                               placeholder="Enter full name"
                               @bind-Value="CreateModel.FullName" />
                </div>

                <!-- ✅ EMAIL -->
                <div class="form-group mt-3">
                    <label class="small text-muted">Email Address</label>
                    <InputText class="form-control"
                               placeholder="Enter email address"
                               @bind-Value="CreateModel.Email" />
                </div>

                <!-- ✅ ROLE -->
                <div class="form-group mt-3">
                    <label class="small text-muted">Select Role</label>
                    <InputSelect class="form-control"
                                 @bind-Value="CreateModel.Role">
                        <option value="">-- Select a role --</option>
                        <option value="Admin">Admin</option>
                        <option value="Manager">Manager</option>
                        <option value="User">User</option>
                    </InputSelect>
                </div>

                <!-- ✅ ACTION BUTTONS -->
                <div class="modal-actions mt-4 d-flex justify-content-end gap-2">
                    <button type="button"
                            class="btn btn-outline-secondary"
                            @onclick="Close">
                        Cancel
                    </button>

                    <button class="btn btn-success"
                            disabled="@IsLoading">
                        @(IsLoading ? "Creating..." : "Create User")
                    </button>
                </div>
            </EditForm>

        </div>
    </div>
}

@code {

    [Parameter] public bool IsOpen { get; set; }
    [Parameter] public EventCallback<bool> OnClose { get; set; }

    private CreateUserDto CreateModel { get; set; } = new CreateUserDto();
    private bool IsLoading { get; set; }
    private string? Message { get; set; }

    private async Task CreateUser()
    {
        IsLoading = true;
        Message = null;

        try
        {
            await UserService.CreateUserAsync(CreateModel);
            Message = "User created successfully.";

            CreateModel = new CreateUserDto();

            await Task.Delay(1200);
            await OnClose.InvokeAsync(false);
        }
        catch
        {
            Message = "Failed to create user.";
        }
        finally
        {
            IsLoading = false;
        }
    }

    private async Task Close()
    {
        CreateModel = new CreateUserDto();
        Message = null;
        await OnClose.InvokeAsync(false);
    }
}
