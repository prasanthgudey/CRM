@using CRM.Client.DTOs.Users
@using CRM.Client.DTOs.Roles
@using CRM.Client.Services.Users
@using CRM.Client.Services.Roles
@inject UserService UserService
@inject RoleService RoleService
@inject IJSRuntime JSRuntime

@if (IsOpen)
{
    <div class="modal-backdrop d-flex align-items-center justify-content-center">

        <div class="modal-card shadow"
             style="
                    width: 540px;
                    border-radius: 14px;
                    padding: 32px 36px;
                    background: white;">

            <h5 class="mb-3 text-center">Create New User</h5>

            @if (!string.IsNullOrWhiteSpace(Message))
            {
                <div class="alert alert-info py-2">@Message</div>
            }

        <EditForm EditContext="editContext" OnValidSubmit="CreateUser">
            <DataAnnotationsValidator />

            <!-- Full Name -->
            <div class="form-group mt-3">
                <label class="small text-muted">Full Name</label>
                <InputText class="form-control"
                           placeholder="Enter full name"
                           @bind-Value="CreateModel.FullName" />

                <ValidationMessage For="@(() => CreateModel.FullName)" />
            </div>

            <!-- Email -->
            <div class="form-group mt-3">
                <label class="small text-muted">Email Address</label>
                <InputText class="form-control"
                           placeholder="Enter email address"
                           @bind-Value="CreateModel.Email" />

                <ValidationMessage For="@(() => CreateModel.Email)" />
            </div>

            <!-- Role Dropdown -->
            <div class="form-group mt-3">
                <label class="small text-muted">Select Role</label>

                <div class="role-dropdown-container position-relative">

                    <div class="role-selected" @onclick="ToggleDropdown">
                        @(string.IsNullOrWhiteSpace(CreateModel.Role)
                                                ? "-- Select a role --"
                                                : CreateModel.Role)
                    </div>

                    @if (ShowDropdown)
                        {
                            <div class="role-dropdown-list shadow-sm">
                                @foreach (var r in Roles ?? new List<RoleResponseDto>())
                                {
                                    <div class="role-item" @onclick="() => SelectRole(r.Name)">
                                        @r.Name
                                    </div>
                                }
                            </div>
                        }
                    </div>

                    <ValidationMessage For="@(() => CreateModel.Role)" />
                </div>

                <!-- Buttons -->
                <div class="modal-actions mt-4 d-flex justify-content-end gap-2">
                    <button type="button"
                            class="btn btn-outline-secondary"
                            @onclick="Close">
                        Cancel
                    </button>

                    <button type="submit"
                            class="btn btn-success"
                            disabled="@IsLoading">
                        @(IsLoading ? "Creating..." : "Create User")
                    </button>
                </div>

            </EditForm>

        </div>
    </div>
}

@code {
    [Parameter] public bool IsOpen { get; set; }
    [Parameter] public EventCallback<bool> OnClose { get; set; }

    private EditContext editContext;
    private CreateUserDto CreateModel { get; set; } = new();
    private List<RoleResponseDto>? Roles { get; set; }

    private bool ShowDropdown = false;
    private bool IsLoading { get; set; }
    private string? Message { get; set; }

    protected override async Task OnParametersSetAsync()
    {
        if (IsOpen)
        {
            CreateModel = new CreateUserDto();
            editContext = new EditContext(CreateModel);   // ▼ IMPORTANT

            Roles = await RoleService.GetAllRolesAsync();
        }
    }

    private void ToggleDropdown()
    {
        ShowDropdown = !ShowDropdown;
    }

    private void SelectRole(string roleName)
    {
        CreateModel.Role = roleName;
        ShowDropdown = false;

        // Notify Blazor that Role field changed → triggers validation
        var field = new FieldIdentifier(CreateModel, nameof(CreateUserDto.Role));
        editContext.NotifyFieldChanged(field);
    }

    private async Task CreateUser()
    {
        IsLoading = true;
        Message = null;

        try
        {
            var result = await UserService.CreateUserAsync(CreateModel);

            if (result?.Success == true)
            {
                await JSRuntime.InvokeVoidAsync("Swal.fire",
                    "Success",
                    result.Message ?? "User created successfully",
                    "success");

                CreateModel = new();
                await Task.Delay(600);
                await OnClose.InvokeAsync(false);
            }
            else if (result != null)
            {
                await JSRuntime.InvokeVoidAsync("Swal.fire",
                    "Error",
                    result.Message ?? "Failed to create user",
                    "error");
            }
        }
        catch
        {
            await JSRuntime.InvokeVoidAsync("Swal.fire",
                "Error",
                "Something went wrong",
                "error");
        }
        finally
        {
            IsLoading = false;
        }

    }

    private async Task Close()
    {
        CreateModel = new();
        Message = null;
        await OnClose.InvokeAsync(false);
    }
}
