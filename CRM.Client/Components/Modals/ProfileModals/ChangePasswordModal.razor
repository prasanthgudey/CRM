@using CRM.Client.Services.Auth
@using CRM.Client.DTOs.Auth
@inject AuthService AuthService
@inject IJSRuntime JSRuntime

@if (IsOpen)
{
    <div class="modal-backdrop d-flex align-items-center justify-content-center">

        <div class="modal-card shadow"
             style="width: 540px; border-radius: 14px; padding: 32px 36px; background: white;">

            <EditForm Model="Model" OnValidSubmit="Submit">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <div class="modal-header d-flex justify-content-between align-items-center">
                    <h5 class="modal-title">Change Password</h5>
                    <button type="button" class="btn-close" @onclick="Close"></button>
                </div>

                <div class="modal-body">

                    @if (!string.IsNullOrWhiteSpace(ErrorMessage))
                    {
                        <div class="alert alert-danger">@ErrorMessage</div>
                    }

                    <div class="mb-3">
                        <label class="form-label">Current Password</label>
                        <InputText type="password"
                                   class="form-control"
                                   @bind-Value="Model.CurrentPassword" />
                        <ValidationMessage For="@(() => Model.CurrentPassword)" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">New Password</label>
                        <InputText type="password"
                                   class="form-control"
                                   @bind-Value="Model.NewPassword" />
                        <ValidationMessage For="@(() => Model.NewPassword)" />
                    </div>
                </div>

                <div class="modal-footer d-flex justify-content-end gap-2">
                    <button type="button" class="btn btn-secondary" @onclick="Close">Cancel</button>
                    <button type="submit" class="btn btn-warning">Update Password</button>
                </div>
            </EditForm>

        </div>
    </div>
}


@code {

    [Parameter] public bool IsOpen { get; set; }
    [Parameter] public EventCallback<bool> OnClose { get; set; }

    private ChangePasswordDto Model = new();

    private string? ErrorMessage;


    private async Task Submit()
    {
        ErrorMessage = null;

        try
        {
            await AuthService.ChangePasswordAsync(Model);

            // ✅ SweetAlert Success Popup
            await JSRuntime.InvokeVoidAsync("crmAlerts.showSuccess", "Password updated successfully!");

            // Reset Model
            Model = new ChangePasswordDto();

            await Task.Delay(300);

            // Close modal
            await OnClose.InvokeAsync(false);
        }
        catch (Exception ex)
        {
            ErrorMessage = ex.Message;

            // ❌ SweetAlert Error Popup
            await JSRuntime.InvokeVoidAsync("crmAlerts.showError", ex.Message);
        }
    }

    private async Task Close()
    {
        ErrorMessage = null;
        Model = new ChangePasswordDto();
        await OnClose.InvokeAsync(false);
    }
}
