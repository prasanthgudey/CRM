@using CRM.Client.Services.Auth
@using CRM.Client.DTOs.Auth
@inject AuthService AuthService
@inject IJSRuntime JSRuntime

@if (IsOpen)
{
    <div class="modal-backdrop d-flex align-items-center justify-content-center">

        <div class="modal-card shadow"
             style="
                    width: 540px;
                    border-radius: 14px;
                    padding: 32px 36px;
                    background: white;">

            <div class="modal-header d-flex justify-content-between align-items-center">
                <h5 class="modal-title">Change Password</h5>
                <button type="button" class="btn-close"
                        @onclick="Close"></button>
            </div>

            <div class="modal-body">

                @if (!string.IsNullOrWhiteSpace(ErrorMessage))
                {
                    <div class="alert alert-danger">@ErrorMessage</div>
                }

                <div class="mb-3">
                    <label class="form-label">Current Password</label>
                    <input type="password"
                           class="form-control"
                           placeholder="Enter your current password"
                           @bind="Model.CurrentPassword" />
                </div>

                <div class="mb-3">
                    <label class="form-label">New Password</label>
                    <input type="password"
                           class="form-control"
                           placeholder="Enter a new secure password"
                           @bind="Model.NewPassword" />
                </div>

            </div>

            <div class="modal-footer d-flex justify-content-end gap-2">
                <button class="btn btn-secondary"
                        @onclick="Close">
                    Cancel
                </button>

                <button class="btn btn-warning"
                        @onclick="Submit">
                    Update Password
                </button>
            </div>

        </div>
    </div>
}

@code {

    [Parameter] public bool IsOpen { get; set; }
    [Parameter] public EventCallback<bool> OnClose { get; set; }

    private ChangePasswordDto Model = new();

    private string? ErrorMessage;

    protected override void OnParametersSet()
    {
        if (IsOpen)
        {
            // Reset modal when opened
            Model = new ChangePasswordDto();
            ErrorMessage = null;
        }
    }

    private async Task Submit()
    {
        ErrorMessage = null;

        try
        {
            await AuthService.ChangePasswordAsync(Model);

            // ✅ SweetAlert Success Popup
            await JSRuntime.InvokeVoidAsync("crmAlerts.showSuccess", "Password updated successfully!");

            // Reset Model
            Model = new ChangePasswordDto();

            await Task.Delay(300);

            // Close modal
            await OnClose.InvokeAsync(false);
        }
        catch (Exception ex)
        {
            ErrorMessage = ex.Message;

            // ❌ SweetAlert Error Popup
            await JSRuntime.InvokeVoidAsync("crmAlerts.showError", ex.Message);
        }
    }

    private async Task Close()
    {
        ErrorMessage = null;
        Model = new ChangePasswordDto();
        await OnClose.InvokeAsync(false);
    }
}
