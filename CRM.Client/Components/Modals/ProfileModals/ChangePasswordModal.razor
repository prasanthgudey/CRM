@using CRM.Client.Services.Auth
@using CRM.Client.DTOs.Auth

@inject AuthService AuthService

@if (IsOpen)
{
    <div class="modal-backdrop">
        <div class="modal-card shadow-sm">

            <div class="modal-header d-flex justify-content-between align-items-center">
                <h5 class="modal-title">Change Password</h5>
                <button type="button" class="btn-close"
                        @onclick="Close"></button>
            </div>

            <div class="modal-body">

                @if (!string.IsNullOrWhiteSpace(ErrorMessage))
                {
                    <div class="alert alert-danger">@ErrorMessage</div>
                }

                @if (!string.IsNullOrWhiteSpace(SuccessMessage))
                {
                    <div class="alert alert-success">@SuccessMessage</div>
                }

                <div class="mb-3">
                    <label class="form-label">Current Password</label>
                    <input type="password"
                           class="form-control"
                           placeholder="Enter your current password"
                           @bind="Model.CurrentPassword" />
                </div>

                <div class="mb-3">
                    <label class="form-label">New Password</label>
                    <input type="password"
                           class="form-control"
                           placeholder="Enter a new secure password"
                           @bind="Model.NewPassword" />
                </div>

            </div>

            <div class="modal-footer d-flex justify-content-end gap-2">
                <button class="btn btn-secondary"
                        @onclick="Close">
                    Cancel
                </button>

                <button class="btn btn-warning"
                        @onclick="Submit">
                    Update Password
                </button>
            </div>

        </div>
    </div>
}

@code {

    [Parameter] public bool IsOpen { get; set; }
    [Parameter] public EventCallback<bool> OnClose { get; set; }

    private ChangePasswordDto Model = new();

    private string? ErrorMessage;
    private string? SuccessMessage;

    private async Task Submit()
    {
        ErrorMessage = null;
        SuccessMessage = null;

        try
        {
            await AuthService.ChangePasswordAsync(Model);

            SuccessMessage = "Password updated successfully";

            Model = new ChangePasswordDto();

            await Task.Delay(800);
            await OnClose.InvokeAsync(false);
        }
        catch (Exception ex)
        {
            ErrorMessage = ex.Message;
        }
    }

    private async Task Close()
    {
        ErrorMessage = null;
        SuccessMessage = null;
        Model = new ChangePasswordDto();

        await OnClose.InvokeAsync(false);
    }
}
