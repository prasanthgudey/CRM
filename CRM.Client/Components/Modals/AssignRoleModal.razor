@using CRM.Client.DTOs.Roles
@using CRM.Client.Services.Roles
@inject RoleService RoleService

@if (IsOpen)
{
    <div class="modal-backdrop">
        <div class="modal-card">

            <h5>Assign Role</h5>

            @if (!string.IsNullOrWhiteSpace(Message))
            {
                <div class="alert alert-info">
                    @Message
                </div>
            }

            <EditForm Model="AssignModel" OnValidSubmit="AssignRole">
                <DataAnnotationsValidator />

                <div class="form-group mt-3">
                    <label>Role</label>
                    <select class="form-control" @bind="AssignModel.RoleName">
                        <option value="">-- Select Role --</option>
                        <option value="Admin">Admin</option>
                        <option value="Manager">Manager</option>
                        <option value="User">User</option>
                    </select>
                </div>

                <div class="modal-actions mt-4">
                    <button class="btn btn-secondary me-2"
                            type="button"
                            @onclick="Close">
                        Cancel
                    </button>

                    <button class="btn btn-success"
                            disabled="@IsLoading">
                        @(IsLoading ? "Assigning..." : "Assign Role")
                    </button>
                </div>
            </EditForm>

        </div>
    </div>
}

@code {

    [Parameter] public bool IsOpen { get; set; }

    [Parameter] public string? UserId { get; set; }

    [Parameter] public EventCallback<bool> OnClose { get; set; }

    private AssignRoleDto AssignModel { get; set; } = new AssignRoleDto();

    private bool IsLoading { get; set; }

    private string? Message { get; set; }

    protected override void OnParametersSet()
    {
        AssignModel = new AssignRoleDto
        {
            UserId = UserId ?? string.Empty
        };
    }

    private async Task AssignRole()
    {
        if (string.IsNullOrWhiteSpace(AssignModel.RoleName))
        {
            Message = "Please select a role.";
            return;
        }

        IsLoading = true;
        Message = null;

        try
        {
            await RoleService.AssignRoleAsync(AssignModel);

            Message = "Role assigned successfully.";

            await Task.Delay(1000);
            await OnClose.InvokeAsync(false);
        }
        catch
        {
            Message = "Failed to assign role.";
        }
        finally
        {
            IsLoading = false;
        }
    }

    private async Task Close()
    {
        Message = null;
        await OnClose.InvokeAsync(false);
    }
}
