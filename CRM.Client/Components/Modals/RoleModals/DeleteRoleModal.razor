@using CRM.Client.Services.Roles
@inject RoleService RoleService
@inject IJSRuntime JSRuntime

@if (IsOpen)
{
    <div class="modal-backdrop d-flex align-items-center justify-content-center">
        <div class="modal-card shadow"
             style="
                width: 540px;
                border-radius: 14px;
                padding: 32px 36px;
                background: white;">

            <h5 class="mb-3 text-center text-danger">Delete Role</h5>

            <p class="text-center mb-1">
                Are you sure you want to permanently delete this role?
            </p>

            <p class="text-center fw-bold text-dark">
                @RoleName
            </p>

            <p class="text-center small text-muted">
                This action cannot be undone.
            </p>

            <div class="modal-actions mt-4 d-flex justify-content-end gap-2">
                <button type="button"
                        class="btn btn-outline-secondary"
                        @onclick="Close">
                    Cancel
                </button>

                <button class="btn btn-danger"
                        disabled="@IsLoading"
                        @onclick="DeleteRole">
                    @(IsLoading ? "Deleting..." : "Delete")
                </button>
            </div>

        </div>
    </div>
}

@code {

    [Parameter] public bool IsOpen { get; set; }
    [Parameter] public string? RoleName { get; set; }
    [Parameter] public EventCallback<bool> OnClose { get; set; }

    private bool IsLoading;

    private async Task DeleteRole()
    {
        try
        {
            await RoleService.DeleteRoleAsync(RoleName!);

            await JSRuntime.InvokeVoidAsync("Swal.fire",
                "Deleted",
                "Role deleted successfully",
                "success");

            await OnClose.InvokeAsync(true);
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("Swal.fire",
                "Error",
                ex.Message,
                "error");
        }
    }


    private async Task Close()
    {
        // ❗ No alerts here – user clicked Cancel
        await OnClose.InvokeAsync(false);
    }
}
