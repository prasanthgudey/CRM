@using CRM.Client.DTOs.Roles
@using CRM.Client.Services.Roles
@inject RoleService RoleService
@inject IJSRuntime JSRuntime

@if (IsOpen)
{
    <div class="modal-backdrop d-flex align-items-center justify-content-center">
        <div class="modal-card shadow"
             style="width: 540px; border-radius: 14px; padding: 32px 36px; background: white;">

            <h5 class="mb-3 text-center">Create New Role</h5>

            @if (!string.IsNullOrWhiteSpace(Message))
            {
                <div class="alert alert-info py-2">@Message</div>
            }

            <EditForm EditContext="editContext" OnValidSubmit="CreateRole">
                <DataAnnotationsValidator />

                <!-- Role Name -->
                <div class="form-group mt-3">
                    <label class="small text-muted">Role Name</label>

                    <InputText class="form-control"
                               placeholder="Enter role name (e.g. Admin)"
                               @bind-Value="RoleModel.RoleName" />

                    <ValidationMessage For="@(() => RoleModel.RoleName)" />
                </div>

                <!-- Buttons -->
                <div class="modal-actions mt-4 d-flex justify-content-end gap-2">
                    <button type="button"
                            class="btn btn-outline-secondary"
                            @onclick="Close">
                        Cancel
                    </button>

                    <button class="btn btn-success"
                            disabled="@IsLoading">
                        @(IsLoading ? "Creating..." : "Create Role")
                    </button>
                </div>
            </EditForm>
        </div>
    </div>
}

@code {

    [Parameter] public bool IsOpen { get; set; }
    [Parameter] public EventCallback<bool> OnClose { get; set; }

    private CreateRoleDto RoleModel { get; set; } = new();
    private EditContext editContext;
    private bool IsLoading;
    private string? Message;

    protected override void OnParametersSet()
    {
        if (IsOpen)
        {
            RoleModel = new CreateRoleDto();
            editContext = new EditContext(RoleModel);
            Message = null;
        }
    }

    private async Task CreateRole()
    {
        IsLoading = true;
        Message = null;

        try
        {
            await RoleService.CreateRoleAsync(RoleModel);

            await JSRuntime.InvokeVoidAsync("Swal.fire",
     "Success",
     "Role created successfully!",
     "success");


            RoleModel = new CreateRoleDto();
            editContext = new EditContext(RoleModel);

            await Task.Delay(400);
            await OnClose.InvokeAsync(true);
        }
        catch (Exception ex)
        {
            Console.WriteLine("🔥 RAW API ERROR: " + ex.Message);

            var msg = ex.Message?.ToLower() ?? "";
            string cleanMessage = ExtractBackendMessage(ex.Message).ToLower();

            if (cleanMessage.Contains("role") && cleanMessage.Contains("exist") ||
                msg.Contains("already") ||
                msg.Contains("exists") ||
                msg.Contains("duplicate") ||
                msg.Contains("409"))
            {
                await JSRuntime.InvokeVoidAsync("Swal.fire",
                    "Duplicate Role",
                    "Role already exists!",
                    "error");
            }
            else
            {
                Message = "Failed to create role.";
                await JSRuntime.InvokeVoidAsync("Swal.fire",
                    "Error",
                    cleanMessage,
                    "error");
            }
        }

        finally
        {
            IsLoading = false;
        }
    }



    private async Task Close()
    {
        RoleModel = new();
        editContext = new EditContext(RoleModel);
        Message = null;

        await OnClose.InvokeAsync(false);
    }
    private string ExtractBackendMessage(string raw)
    {
        try
        {
            var json = System.Text.Json.JsonDocument.Parse(raw);

            if (json.RootElement.TryGetProperty("message", out var msgProp))
                return msgProp.GetString() ?? raw;
        }
        catch
        {
            // not JSON → return raw
        }

        return raw;
    }

}
