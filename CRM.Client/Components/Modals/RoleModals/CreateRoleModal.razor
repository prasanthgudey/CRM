@using CRM.Client.DTOs.Roles
@using CRM.Client.Services.Roles
@inject RoleService RoleService
@inject IJSRuntime JSRuntime

@if (IsOpen)
{
    <div class="modal-backdrop d-flex align-items-center justify-content-center">
        <div class="modal-card shadow">

            <h5 class="mb-3 text-center">Create New Role</h5>

            @if (!string.IsNullOrWhiteSpace(Message))
            {
                <div class="alert alert-info py-2">@Message</div>
            }

            <EditForm Model="RoleModel" OnValidSubmit="CreateRole">
                <DataAnnotationsValidator />

                <div class="form-group mt-3">
                    <label class="small text-muted">Role Name</label>
                    <InputText class="form-control"
                               placeholder="Enter role name"
                               @bind-Value="RoleModel.RoleName" />
                </div>

                <div class="modal-actions mt-4 d-flex justify-content-end gap-2">
                    <button type="button"
                            class="btn btn-outline-secondary"
                            @onclick="Close">
                        Cancel
                    </button>

                    <button class="btn btn-success"
                            disabled="@IsLoading">
                        @(IsLoading ? "Creating..." : "Create Role")
                    </button>
                </div>
            </EditForm>

        </div>
    </div>
}

@code {

    [Parameter] public bool IsOpen { get; set; }
    [Parameter] public EventCallback<bool> OnClose { get; set; }

    private CreateRoleDto RoleModel { get; set; } = new();
    private bool IsLoading;
    private string? Message;

    // Guard: true after first client render (JS interop available)
    private bool _isInteractive = false;

    // Mark component interactive after first render
    protected override Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            _isInteractive = true;
        }
        return base.OnAfterRenderAsync(firstRender);
    }

    // Helper to safely call your crmAlerts. If JS not ready, fallback to inline message.
    private async Task ShowAlertAsync(string kind, string text)
    {
        // kind: "success", "error", "warning", etc — maps to your crmAlerts functions
        if (!_isInteractive)
        {
            // Fallback while prerendering or before circuit ready
            // For validation (warning) we want immediate feedback in UI
            Message = text;
            return;
        }

        try
        {
            // prefer calling your crmAlerts helpers - adjust names if different
            if (kind.Equals("success", StringComparison.OrdinalIgnoreCase))
                await JSRuntime.InvokeVoidAsync("crmAlerts.showSuccess", text);
            else if (kind.Equals("error", StringComparison.OrdinalIgnoreCase))
                await JSRuntime.InvokeVoidAsync("crmAlerts.showError", text);
            else if (kind.Equals("warning", StringComparison.OrdinalIgnoreCase))
                await JSRuntime.InvokeVoidAsync("crmAlerts.showWarning", text);
            else
                await JSRuntime.InvokeVoidAsync("crmAlerts.showInfo", text);
        }
        catch
        {
            // In case JS call still fails for some reason, show inline message
            Message = text;
        }
    }

    private async Task CreateRole()
    {
        Message = null;

        // client-side validation: require a role name
        if (string.IsNullOrWhiteSpace(RoleModel?.RoleName))
        {
            await ShowAlertAsync("warning", "Please enter a role name.");
            return;
        }

        IsLoading = true;

        try
        {
            // Call API
            await RoleService.CreateRoleAsync(RoleModel);

            // SUCCESS: exact same behavior as before
            await ShowAlertAsync("success", "Role created successfully!");

            RoleModel = new CreateRoleDto(); // reset form

            await Task.Delay(400);
            await OnClose.InvokeAsync(true);  // parent reload
        }
        catch (Exception ex)
        {
            var msg = ex.Message?.ToLower() ?? "";

            // Duplicate role detection - same messages as you used before
            if (msg.Contains("exists") || msg.Contains("already") || msg.Contains("duplicate"))
            {
                Message = "Role already exists.";
                await ShowAlertAsync("error", "Role already exists!");
            }
            else
            {
                // Generic failure (same text as your original catch)
                Message = "Failed to create role.";
                await ShowAlertAsync("error", "Failed to create role!");
            }
        }
        finally
        {
            IsLoading = false;
        }
    }

    private async Task Close()
    {
        RoleModel = new();
        Message = null;
        await OnClose.InvokeAsync(false);
    }
}
