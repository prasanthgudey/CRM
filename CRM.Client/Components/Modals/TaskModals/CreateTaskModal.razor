@using CRM.Client.DTOs.Tasks
@using CRM.Client.DTOs.Customers
@using CRM.Client.DTOs.Users
@using CRM.Client.Services.Tasks
@using CRM.Client.Services.Customers
@using CRM.Client.Services.Users
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@using Microsoft.AspNetCore.Components.Forms

@inject IJSRuntime JSRuntime
@inject TaskService TaskService
@inject CustomerService CustomerService
@inject UserService UserService
@inject AuthenticationStateProvider AuthenticationStateProvider

@if (IsOpen)
{
    <div class="modal fade show d-block task-modal-backdrop" tabindex="-1">
        <div class="modal-dialog modal-lg modal-dialog-centered task-modal-dialog">
            <div class="modal-content task-modal-content">

                <!-- HEADER -->
                <div class="modal-header task-modal-header">
                    <h5 class="modal-title task-modal-title">
                        <span class="task-modal-icon">🗂️</span> Create Task
                    </h5>
                    <button type="button"
                            class="btn-close btn-close-white"
                            @onclick="() => Close(false)">
                    </button>
                </div>

                <!-- BODY -->
                <div class="modal-body task-modal-body">

                    <EditForm EditContext="@editContext" OnValidSubmit="HandleValidSubmit">
                        <DataAnnotationsValidator />

                        <!-- ASSIGNMENT -->
                        <div class="task-section mb-3">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="form-label">Customer</label>
                                    <InputSelect class="form-select" @bind-Value="Model.CustomerId">
                                        <option value="">-- Select Customer --</option>
                                        @foreach (var c in Customers ?? new())
                                        {
                                            @foreach (var c in Customers)
                                            {
                                                <option value="@c.CustomerId">
                                                    @($"{c.FirstName} {c.SurName}".Trim() +
                                                                                            (string.IsNullOrWhiteSpace(c.Email) ? "" : $" ({c.Email})"))
                                    </option>
                                                                        }
                                        }
                                    </InputSelect>
                                    <ValidationMessage For="@(() => Model.CustomerId)" class="text-danger" />
                                </div>

                                <!-- USER FIELD ROLE-BASED -->
                                <div class="col-md-6">
                                    <label class="form-label">Assign To User</label>

                                    @if (IsAdminOrManager)
                                    {
                                        <!-- Admin / Manager: Dropdown -->
                                        <InputSelect class="form-select" @bind-Value="Model.UserId">
                                            <option value="">-- Select User --</option>
                                            @if (Users != null)
                                            {
                                                @foreach (var u in Users)
                                                {
                                                    string display = string.IsNullOrWhiteSpace(u.FullName)
                                                    ? u.Email
                                                    : $"{u.FullName} ({u.Email})";

                                                    <option value="@u.Id">@display</option>
                                                }
                                            }
                                        </InputSelect>
                                    }
                                    else
                                    {
                                        <!-- Normal User: Frozen field -->
                                        <input class="form-control" value="@GetUserDisplayName(Model.UserId)" disabled />

                                        <!-- Hidden binds userId so model stays valid -->
                                        <input type="hidden" @bind="Model.UserId" />
                                    }

                                    <ValidationMessage For="@(() => Model.UserId)" class="text-danger validation-message" />
                                </div>

                            </div>
                        </div>

                        <!-- DETAILS -->
                        <div class="task-section mb-3">
                            <div class="task-section-title">Details</div>

                            <label class="form-label">Title</label>
                            <InputText class="form-control" @bind-Value="Model.Title" />
                            <ValidationMessage For="@(() => Model.Title)" class="text-danger" />

                            <label class="form-label mt-2">Description</label>
                            <InputTextArea class="form-control" rows="3" @bind-Value="Model.Description" />
                            <ValidationMessage For="@(() => Model.Description)" class="text-danger" />
                        </div>

                        <!-- SCHEDULE -->
                        <div class="task-section mb-3">
                            <div class="row g-3">
                                <div class="col-md-4">
                                    <label class="form-label">Due Date</label>
                                    <InputDate class="form-control" @bind-Value="Model.DueDate" />
                                </div>

                                <div class="col-md-4">
                                    <label class="form-label">Priority</label>
                                    <InputSelect class="form-select" @bind-Value="Model.Priority">
                                        @foreach (var p in Enum.GetValues<TaskPriority>())
                                        {
                                            <option value="@p">@p</option>
                                        }
                                    </InputSelect>
                                </div>

                                <div class="col-md-4">
                                    <label class="form-label">Status</label>
                                    <InputSelect class="form-select" @bind-Value="Model.State">
                                        @foreach (var s in Enum.GetValues<TaskState>())
                                        {
                                            <option value="@s">@s</option>
                                        }
                                    </InputSelect>
                                </div>
                            </div>
                        </div>

                        <button type="submit"
                                class="btn btn-primary w-100"
                                disabled="@IsLoading">
                            @(IsLoading ? "Saving..." : "Save Task")
                        </button>
                    </EditForm>

                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public bool IsOpen { get; set; }
    [Parameter] public EventCallback<bool> OnClose { get; set; }

    private CreateTaskDto Model = new();
    private List<CustomerResponseDto>? Customers;
    private List<UserResponseDto>? Users;

    private bool IsAdminOrManager;

    private EditContext? editContext;
    private ValidationMessageStore? messageStore;
    private bool IsLoading;
    private bool _loaded;

    protected override async Task OnParametersSetAsync()
    {
        if (!IsOpen) return;

        editContext = new EditContext(Model);
        messageStore = new ValidationMessageStore(editContext);

        if (!_loaded)
        {
            Customers = await CustomerService.GetAllAsync();
            Users = await UserService.GetAllUsersAsync();
            _loaded = true;
        }

            var auth = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            var user = auth.User;

            IsAdminOrManager = user.IsInRole("Admin") || user.IsInRole("Manager");

            // For non-admin → auto-assign current user
            if (!IsAdminOrManager)
            {
                var uid = user.FindFirst(ClaimTypes.NameIdentifier)?.Value;
                Model.UserId = uid;
            }

            // DEFAULTS ADDED HERE ⭐⭐⭐
            if (Model.Priority == default)
                Model.Priority = TaskPriority.Low;

            if (Model.State == default)
                Model.State = TaskState.Pending;

            if (Model.DueDate == default || Model.DueDate < DateTime.Today)
                Model.DueDate = DateTime.Today.AddDays(1);
        }
    }

    private async Task LoadLookupsAsync()
    {
        Customers = await CustomerService.GetAllAsync();
        Users = await UserService.GetAllUsersAsync();
    }

    private string GetUserDisplayName(string id)
    {
        var u = Users?.FirstOrDefault(x => x.Id == id);
        return u is null
            ? "Current User"
            : string.IsNullOrWhiteSpace(u.FullName) ? u.Email : u.FullName;
    }

    private async Task HandleValidSubmit()
    {
        messageStore?.Clear();
        editContext?.NotifyValidationStateChanged();

        if (Model.CustomerId == Guid.Empty)
            messageStore?.Add(() => Model.CustomerId, "Customer is required.");

        if (Model.DueDate.Date < DateTime.Today)
            messageStore?.Add(() => Model.DueDate, "Due date cannot be in the past.");
        if (Model.CustomerId == Guid.Empty)
            messageStore?.Add(() => Model.CustomerId, "Customer is required");

        if (string.IsNullOrWhiteSpace(Model.UserId))
            messageStore?.Add(() => Model.UserId, "User is required.");

        if (editContext!.GetValidationMessages().Any())
        {
            editContext.NotifyValidationStateChanged();
            return;
        }

        IsLoading = true;

        try
        {
            await TaskService.CreateAsync(Model);

            await JSRuntime.InvokeVoidAsync("Swal.fire",
                "Success",
                "Task created successfully",
                "success");

            await Close(true);
        }
        catch
        {
            await JSRuntime.InvokeVoidAsync("Swal.fire",
                "Error",
                "Failed to create task",
                "error");
        }
        finally
        {
            IsLoading = false;
        }
    }

    private async Task Close(bool refresh)
    {
        // DEFAULTS ADDED HERE TOO ⭐⭐⭐
        Model = new CreateTaskDto
        {
            DueDate = DateTime.Today.AddDays(1),
            Priority = TaskPriority.Low,      // default priority
            State = TaskState.Pending         // default status
        };

        editContext = new EditContext(Model);
        messageStore = new ValidationMessageStore(editContext);

        await OnClose.InvokeAsync(refresh);
    }
}
