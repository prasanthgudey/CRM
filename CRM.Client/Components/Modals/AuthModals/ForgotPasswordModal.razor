@using CRM.Client.Services.Auth
@using CRM.Client.DTOs.Auth

@inject AuthService AuthService

@if (IsOpen)
{
    <div class="modal-backdrop">
        <div class="modal-card shadow-sm">

            <div class="modal-header d-flex justify-content-between align-items-center">
                <h5 class="modal-title">Forgot Password</h5>
                <button type="button" class="btn-close" @onclick="Close"></button>
            </div>

            <div class="modal-body">

                @if (!string.IsNullOrWhiteSpace(ErrorMessage))
                {
                    <div class="alert alert-danger">@ErrorMessage</div>
                }

                @if (!string.IsNullOrWhiteSpace(SuccessMessage))
                {
                    <div class="alert alert-success">@SuccessMessage</div>
                }

                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input type="email"
                           class="form-control"
                           placeholder="Enter your account email"
                           @bind="Model.Email" />
                </div>

            </div>

            <div class="modal-footer d-flex justify-content-end gap-2">
                <button class="btn btn-secondary" @onclick="Close">Cancel</button>
                <button class="btn btn-primary" @onclick="Submit" disabled="@IsBusy">
                    @(IsBusy ? "Sending..." : "Send reset link")
                </button>
            </div>

        </div>
    </div>
}

@code {
    [Parameter] public bool IsOpen { get; set; }
    [Parameter] public EventCallback<bool> OnClose { get; set; }

    private ForgotPasswordDto Model { get; set; } = new();
    private string? ErrorMessage;
    private string? SuccessMessage;
    private bool IsBusy;

    private async Task Submit()
    {
        ErrorMessage = null;
        SuccessMessage = null;
        IsBusy = true;

        try
        {
            await AuthService.ForgotPasswordAsync(Model);
            SuccessMessage = "If the email exists, a reset link has been sent to it.";
            Model = new ForgotPasswordDto();

            // briefly show success then close
            await Task.Delay(1200);
            await OnClose.InvokeAsync(false);
        }
        catch (Exception ex)
        {
            // surface readable message
            ErrorMessage = ex.Message;
        }
        finally
        {
            IsBusy = false;
        }
    }

    private async Task Close()
    {
        ErrorMessage = null;
        SuccessMessage = null;
        Model = new ForgotPasswordDto();
        await OnClose.InvokeAsync(false);
    }
}
