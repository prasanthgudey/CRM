@using CRM.Client.Services.Auth
@using CRM.Client.DTOs.Auth

@inject AuthService AuthService

@if (IsOpen)
{
    <div class="fp-backdrop">
        <div class="fp-modal-card">

            <div class="fp-modal-header">
                <h3>Forgot Password</h3>
                <button type="button" class="fp-close" @onclick="Close">×</button>
            </div>

            <div class="fp-modal-body">

                @if (!string.IsNullOrWhiteSpace(ErrorMessage))
                {
                    <div class="fp-alert fp-alert-error">@ErrorMessage</div>
                }

                @if (!string.IsNullOrWhiteSpace(SuccessMessage))
                {
                    <div class="fp-alert fp-alert-success">@SuccessMessage</div>
                }

                <div class="fp-field">
                    <label>Email</label>
                    <input type="email"
                           class="fp-input"
                           placeholder="Enter your account email"
                           @bind="Model.Email" />
                </div>

            </div>

            <div class="fp-modal-footer">
                <button class="fp-btn fp-btn-secondary" @onclick="Close">Cancel</button>
                <button class="fp-btn fp-btn-primary" @onclick="Submit" disabled="@IsBusy">
                    @(IsBusy ? "Sending..." : "Send reset link")
                </button>
            </div>

        </div>
    </div>
}

@code {
    [Parameter] public bool IsOpen { get; set; }
    [Parameter] public EventCallback<bool> OnClose { get; set; }

    private ForgotPasswordDto Model { get; set; } = new();
    private string? ErrorMessage;
    private string? SuccessMessage;
    private bool IsBusy;

    private async Task Submit()
    {
        ErrorMessage = null;
        SuccessMessage = null;
        IsBusy = true;

        try
        {
            await AuthService.ForgotPasswordAsync(Model);
            SuccessMessage = "If the email exists, a reset link has been sent.";
            Model = new ForgotPasswordDto();
            await Task.Delay(1200);
            await OnClose.InvokeAsync(false);
        }
        catch (Exception ex)
        {
            ErrorMessage = ex.Message;
        }
        finally
        {
            IsBusy = false;
        }
    }

    private async Task Close()
    {
        ErrorMessage = null;
        SuccessMessage = null;
        Model = new ForgotPasswordDto();
        await OnClose.InvokeAsync(false);
    }
}
