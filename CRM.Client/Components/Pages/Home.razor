@page "/"
@using Microsoft.AspNetCore.Components.Authorization

<PageTitle>CRM | Home</PageTitle>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 text-center">

            <!-- Logo / Title -->
            <h1 class="display-5 fw-bold mb-3">
                CRM Management System
            </h1>

            <!-- Subtitle -->
            <p class="lead text-muted mb-4">
                Manage customers, tasks, and business insights in one secure platform.
            </p>

            <!-- Divider -->
            <hr class="my-4" />

            <!-- Description -->
            <p class="text-secondary mb-4">
                This system helps teams streamline workflows, track customer interactions,
                and maintain full audit visibility with role-based access.
            </p>

            <!-- Actions -->
            <div class="d-flex justify-content-center gap-3">

                <AuthorizeView>
                    <NotAuthorized>
                        <a class="btn btn-primary px-4" href="/login">
                            Sign In
                        </a>
                    </NotAuthorized>

                    <Authorized>
                     
                    </Authorized>
                </AuthorizeView>
                <a class="btn btn-outline-secondary px-4" href="/dashboard">
                    Go to Dashboard
                </a>

            </div>


        </div>
    </div>
</div>
