@page "/change-expired-password"
@using CRM.Client.Components.Layout
@using CRM.Client.DTOs.Auth
@using CRM.Client.Services.Auth
@using CRM.Client.State
@layout AuthLayout

@inject AuthService AuthService
@inject NavigationManager NavigationManager
@inject AppState AppState

<h3>Change Expired Password</h3>

@if (!string.IsNullOrEmpty(SuccessMessage))
{
    <div class="alert alert-success">@SuccessMessage</div>
}
else if (!string.IsNullOrEmpty(ErrorMessage))
{
    <div class="alert alert-danger">@ErrorMessage</div>
}

<div class="card p-3 shadow-sm" style="max-width: 420px;">
    <EditForm Model="@model" OnValidSubmit="@HandleSubmit">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="mb-3">
            <label class="form-label">Email</label>
            <InputText @bind-Value="model.Email" class="form-control" disabled />
            <ValidationMessage For="@(() => model.Email)" />
        </div>

        <div class="mb-3">
            <label class="form-label">Current Password</label>
            <InputText @bind-Value="model.CurrentPassword" type="password" class="form-control" />
            <ValidationMessage For="@(() => model.CurrentPassword)" />
        </div>

        <div class="mb-3">
            <label class="form-label">New Password</label>
            <InputText @bind-Value="model.NewPassword" type="password" class="form-control" />
            <ValidationMessage For="@(() => model.NewPassword)" />
            <small class="form-text text-muted">Minimum 6 characters.</small>
        </div>

        <div class="d-flex justify-content-end gap-2 mt-3">
            <button type="button" class="btn btn-outline-secondary" @onclick="Cancel">Cancel</button>
            <button type="submit" class="btn btn-primary" disabled="@IsBusy">
                @(IsBusy ? "Updating..." : "Update Password")
            </button>
        </div>
    </EditForm>
</div>

@code {
    private ChangeExpiredPasswordDto model = new()
    {
        Email = string.Empty,
        CurrentPassword = string.Empty,
        NewPassword = string.Empty
    };

    private bool IsBusy;
    private string? ErrorMessage;
    private string? SuccessMessage;

    protected override void OnInitialized()
    {
        // Prefill email from AppState if available (optional)
        if (AppState?.Auth?.User != null)
        {
            var emailClaim = AppState.Auth.User.Claims.FirstOrDefault(c => c.Type == System.Security.Claims.ClaimTypes.Email);
            if (emailClaim != null)
                model.Email = emailClaim.Value;
        }
    }

    private async Task HandleSubmit()
    {
        ErrorMessage = null;
        SuccessMessage = null;
        IsBusy = true;

        try
        {
            var resp = await AuthService.ChangeExpiredPasswordAsync(model);

            if (resp == null)
            {
                ErrorMessage = "Failed to change password. Please verify your current password and try again.";
                return;
            }

            SuccessMessage = "Password changed successfully. Redirecting...";
            await Task.Delay(700);

            // AuthService already persists tokens (if returned). Redirect to dashboard/home.
            NavigationManager.NavigateTo("/", true);
        }
        catch (Exception ex)
        {
            ErrorMessage = "Unable to change password. " + (ex.Message ?? string.Empty);
        }
        finally
        {
            IsBusy = false;
        }
    }

    private void Cancel()
    {
        NavigationManager.NavigateTo("/login", true);
    }
}
