@page "/please-login"
@inject NavigationManager Navigation
@layout CRM.Client.Components.Layout.EmptyLayout

<div style="
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(to bottom right, #f8f9fa, #e9ecef);
">
    <div style="
        background: white;
        padding: 40px 50px;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.1);
        text-align: center;
        max-width: 420px;
        width: 100%;
    ">
        <h2 style="font-weight: 600; margin-bottom: 10px; color: #333;">
            Please Login to Continue
        </h2>

        <p style="color: #666; font-size: 15px;">
            You must be logged in to access this page.
        </p>

        <button class="btn btn-primary btn-lg mt-3"
                style="
                width: 100%;
                border-radius: 8px;
                padding: 12px;
                font-size: 18px;
            "
                @onclick="GoToLogin">
            Go to Login
        </button>
    </div>
</div>

@code {
    private void GoToLogin()
    {
        Navigation.NavigateTo("/login");
    }
}
