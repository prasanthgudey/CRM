@page "/profile"
@layout MainLayout

@using CRM.Client.Components.Layout
@using CRM.Client.DTOs.Users
@using CRM.Client.Services.Users
@using CRM.Client.Services.Auth
@using CRM.Client.Components.Modals.ProfileModals

@inject UserService UserService
@inject AuthService AuthService
@inject NavigationManager Navigation

<h3 class="page-title">My Profile</h3>

@if (UserProfile == null)
{
    <p>Loading profile...</p>
}
else
{
    <div class="profile-card-wrapper">
        <div class="profile-card card p-4 mb-4">

            <!-- FULL NAME -->
            <div class="mb-3">
                <label class="form-label fw-bold">Full Name</label>
                <div class="form-control bg-light">@UserProfile.FullName</div>
            </div>

            <!-- EMAIL -->
            <div class="mb-3">
                <label class="form-label fw-bold">Email</label>
                <div class="form-control bg-light">@UserProfile.Email</div>
            </div>

            <!-- ROLE -->
            <div class="mb-3">
                <label class="form-label fw-bold">Role</label>
                <span class="badge bg-primary">@UserProfile.Role</span>
            </div>

            <!-- STATUS -->
            <div class="mb-3">
                <label class="form-label fw-bold">Status</label>
                @if (UserProfile.IsActive)
                {
                    <span class="badge bg-success">Active</span>
                }
                else
                {
                    <span class="badge bg-secondary">Deactivated</span>
                }
            </div>

            <!-- MFA STATUS -->
            <div class="mb-3">
                <label class="form-label fw-bold">Multi-Factor Authentication</label>
                <div>
                    @if (UserProfile.TwoFactorEnabled)
                    {
                        <span class="badge bg-success">Enabled</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Disabled</span>
                    }
                </div>
            </div>

            <!-- ACTION BUTTONS -->
            <div class="mt-4 d-flex gap-2">

                <!-- CHANGE PASSWORD -->
                <button class="btn btn-warning"
                        @onclick="OpenChangePasswordModal">
                    Change Password
                </button>

                <!-- MFA ACTIONS -->
                @if (!UserProfile.TwoFactorEnabled)
                {
                    <button class="btn btn-outline-primary"
                            @onclick="GoToEnableMfa">
                        Enable MFA
                    </button>
                }
                else
                {
                    <button class="btn btn-outline-danger"
                            @onclick="OpenDisableMfaModal">
                        Disable MFA
                    </button>
                }
            </div>
        </div>
    </div>
}

<!-- MODALS -->
<ChangePasswordModal IsOpen="@IsChangePasswordOpen"
                     OnClose="CloseChangePasswordModal" />

<DisableMfaModal IsOpen="@IsDisableMfaOpen"
                 OnConfirm="ConfirmDisableMfa"
                 OnClose="CloseDisableMfaModal" />

@code {

    private UserResponseDto? UserProfile;

    private bool IsChangePasswordOpen;
    private bool IsDisableMfaOpen;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            UserProfile = await UserService.GetMyProfileAsync();
            StateHasChanged();
        }
    }

    private void OpenChangePasswordModal()
    {
        IsChangePasswordOpen = true;
    }

    private void CloseChangePasswordModal(bool _)
    {
        IsChangePasswordOpen = false;
    }

    private void GoToEnableMfa()
    {
        Navigation.NavigateTo("/enable-mfa");
    }

    private void OpenDisableMfaModal()
    {
        IsDisableMfaOpen = true;
    }

    private async Task ConfirmDisableMfa(string code)
    {
        await AuthService.DisableMfaAsync(code);

        IsDisableMfaOpen = false;

        UserProfile = await UserService.GetMyProfileAsync();
        StateHasChanged();
    }

    private void CloseDisableMfaModal(bool _)
    {
        IsDisableMfaOpen = false;
    }
}
