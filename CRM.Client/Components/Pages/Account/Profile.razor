@page "/profile"
@layout MainLayout
@attribute [Authorize]
@using Microsoft.AspNetCore.Authorization
@using CRM.Client.Components.Layout
@using CRM.Client.DTOs.Users
@using CRM.Client.Services.Users
@using CRM.Client.Services.Auth
@using CRM.Client.Components.Modals.ProfileModals

@inject UserService UserService
@inject AuthService AuthService
@inject NavigationManager Navigation

<h3 class="profile-title">My Profile</h3>

@if (UserProfile == null)
{
    <p>Loading profile...</p>
}
else
{
    <div class="profile-page">
        <div class="profile-card">

            <!-- Row 1: Full Name (full width) -->
            <div class="profile-row">
                <label class="profile-label">Full Name</label>
                <div class="profile-value">@UserProfile.FullName</div>
            </div>

            <!-- Row 2: Email (full width) -->
            <div class="profile-row">
                <label class="profile-label">Email</label>
                <div class="profile-value">@UserProfile.Email</div>
            </div>

            <!-- Row 3: Role + Status (two columns) -->
            <div class="profile-row profile-row--split">
                <div class="profile-col" >
                    <label class="profile-label">Role</label><center>
                    <span class="profile-badge profile-badge--primary" >
                        @UserProfile.Role
                        </span>
                    </center>
                </div>

                <div class="profile-col">
                    <label class="profile-label">Status</label><center>
                    @if (UserProfile.IsActive)
                    {
                        <span class="profile-badge profile-badge--success">Active</span>
                    }
                    else
                    {
                        <span class="profile-badge profile-badge--secondary">Deactivated</span>
                    }
                    </center>
                </div>
            </div>

            <!-- Row 4: MFA (full width) -->
            @* <div class="profile-row">
                <label class="profile-label">Multi-Factor Authentication</label>
                @if (UserProfile.TwoFactorEnabled)
                {
                    <span class="profile-badge profile-badge--success">Enabled</span>
                }
                else
                {
                    <span class="profile-badge profile-badge--secondary">Disabled</span>
                }
            </div> *@

            <!-- Row 5: Buttons (two columns) -->
            <div class="profile-row profile-row--split profile-row--actions">
                <button class="profile-btn profile-btn--warning"
                        @onclick="OpenChangePasswordModal">
                    Change Password
                </button>

                @if (!UserProfile.TwoFactorEnabled)
                {
                    <button class="profile-btn profile-btn--primary-outline"
                            @onclick="GoToEnableMfa">
                        Enable MFA
                    </button>
                }
                else
                {
                    <button class="profile-btn profile-btn--danger-outline"
                            @onclick="OpenDisableMfaModal">
                        Disable MFA
                    </button>
                }
            </div>

        </div>
    </div>
}

<ChangePasswordModal IsOpen="@IsChangePasswordOpen"
                     OnClose="CloseChangePasswordModal" />

<DisableMfaModal IsOpen="@IsDisableMfaOpen"
                 OnConfirm="ConfirmDisableMfa"
                 OnClose="CloseDisableMfaModal" />

@code {
    private UserResponseDto? UserProfile;

    private bool IsChangePasswordOpen;
    private bool IsDisableMfaOpen;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            UserProfile = await UserService.GetMyProfileAsync();
            StateHasChanged();
        }
    }

    private void OpenChangePasswordModal() => IsChangePasswordOpen = true;
    private void CloseChangePasswordModal(bool _) => IsChangePasswordOpen = false;

    private void GoToEnableMfa() => Navigation.NavigateTo("/enable-mfa");

    private void OpenDisableMfaModal() => IsDisableMfaOpen = true;

    private async Task ConfirmDisableMfa(string code)
    {
        await AuthService.DisableMfaAsync(code);
        IsDisableMfaOpen = false;
        UserProfile = await UserService.GetMyProfileAsync();
        StateHasChanged();
    }

    private void CloseDisableMfaModal(bool _) => IsDisableMfaOpen = false;
}
