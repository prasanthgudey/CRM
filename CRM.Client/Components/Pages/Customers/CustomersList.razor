@page "/customers"
@layout MainLayout
@attribute [Authorize]

@using CRM.Client.Components.Layout
@using CRM.Client.DTOs.Customers
@using CRM.Client.Services.Customers
@using CRM.Client.Components.Modals.CustomerModals
@using CRM.Client.DTOs.Shared
@using CRM.Client.Components.Shared
@using Microsoft.AspNetCore.Authorization

@inject CustomerService CustomerService

<h3>Customers</h3>

<div class="mb-3 d-flex gap-2 align-items-center">
    <button type="button"
            class="btn btn-primary"
            @onclick="OpenCreate">
        + New Customer
    </button>

    <!-- PageSize selector -->
    <select class="form-select w-auto ms-3" @bind="PageSize">
        <option value="5">5</option>
        <option value="10">10</option>
        <option value="20">20</option>
        <option value="50">50</option>
    </select>
</div>

@if (IsLoading)
{
    <p>Loading customers...</p>
}
else if (Customers == null || !Customers.Any())
{
    <p>No customers found.</p>
}
else
{
    <table class="table table-bordered align-middle">
        <thead class="table-light">
            <tr>
                <th>Name</th>
                <th>Preferred Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Address</th>
                <th>Created At</th>
                <th style="width:220px">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Customers)
            {
                <tr>
                    <td>@GetFullName(customer)</td>
                    <td>@(string.IsNullOrWhiteSpace(customer.PreferredName) ? "-" : customer.PreferredName)</td>
                    <td>@customer.Email</td>
                    <td>@customer.Phone</td>
                    <td>@customer.Address</td>
                    <td>@FormatDate(customer.CreatedAt)</td>

                    <td>
                        <button class="btn btn-light btn-sm me-2"
                                @onclick="() => OpenEdit(customer)">
                            Edit
                        </button>

                        <button class="btn btn-danger btn-sm"
                                @onclick="() => OpenDelete(customer.CustomerId)">
                            Delete
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Pager -->
    <Pager CurrentPage="@CurrentPage"
           PageSize="@PageSize"
           TotalCount="@TotalCount"
           OnPageChanged="OnPageChanged" />
}

<CreateCustomerModal IsOpen="@IsCreateOpen"
                     OnClose="HandleCreateClosed" />

<EditCustomerModal IsOpen="@IsEditOpen"
                   Customer="@SelectedCustomer"
                   OnClose="HandleEditClosed" />

<DeleteCustomerModal IsOpen="@IsDeleteOpen"
                     CustomerId="@SelectedCustomerId"
                     OnClose="HandleDeleteClosed" />

@code {
    private List<CustomerResponseDto> Customers = new();
    private CustomerResponseDto? SelectedCustomer;
    private Guid? SelectedCustomerId;

    private bool IsCreateOpen;
    private bool IsEditOpen;
    private bool IsDeleteOpen;

    // Pagination state
    private int CurrentPage = 1;
    private int _pageSize = 20;
    private long TotalCount = 0;
    private bool IsLoading = true;
    private bool _clamping = false;

    // PageSize binder used by select; when changed reload first page
    private int PageSize
    {
        get => _pageSize;
        set
        {
            if (_pageSize == value) return;
            _pageSize = value;
            CurrentPage = 1;

            _ = InvokeAsync(async () =>
            {
                await LoadPage();
                StateHasChanged();
            });
        }
    }

    // protected override async Task OnInitializedAsync()
    // {
    //     await LoadPage();
    // }
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await LoadPage();
            StateHasChanged();
        }
    }

    private async Task LoadPage()
    {
        IsLoading = true;
        StateHasChanged();

        var paged = await CustomerService.GetPagedAsync(CurrentPage, PageSize);

        if (paged == null)
        {
            Customers = new();
            TotalCount = 0;
            IsLoading = false;
            return;
        }

        // Clamp if page out of range
        if (!_clamping && paged.TotalPages > 0 && CurrentPage > paged.TotalPages)
        {
            _clamping = true;
            CurrentPage = paged.TotalPages;
            await LoadPage();
            _clamping = false;
            return;
        }

        Customers = paged.Items;
        TotalCount = paged.TotalCount;
        CurrentPage = paged.Page;
        _pageSize = paged.PageSize;

        IsLoading = false;
    }

    private async Task OnPageChanged(int page)
    {
        CurrentPage = page;
        await LoadPage();
    }

    // Modals and refresh logic (preserve behavior)
    private void OpenCreate() => IsCreateOpen = true;

    private void OpenEdit(CustomerResponseDto customer)
    {
        SelectedCustomer = customer;
        IsEditOpen = true;
    }

    private void OpenDelete(Guid customerId)
    {
        SelectedCustomerId = customerId;
        IsDeleteOpen = true;
    }

    private async Task HandleCreateClosed(bool refresh)
    {
        IsCreateOpen = false;

        if (refresh)
        {
            await LoadPage();
            StateHasChanged();
        }
    }

    private async Task HandleEditClosed(bool refresh)
    {
        IsEditOpen = false;
        SelectedCustomer = null;

        if (refresh)
        {
            await LoadPage();
            StateHasChanged();
        }
    }

    private async Task HandleDeleteClosed(bool refresh)
    {
        IsDeleteOpen = false;
        SelectedCustomerId = null;

        if (refresh)
        {
            await LoadPage();
            StateHasChanged();
        }
    }

    // Helpers
    private string FormatDate(string created)
    {
        if (DateTime.TryParse(created, out var dt))
        {
            return dt.ToLocalTime().ToString("MMM dd yyyy hh:mm tt");
        }

        return created;
    }

    private string GetFullName(CustomerResponseDto c)
    {
        if (!string.IsNullOrWhiteSpace(c.PreferredName))
            return c.PreferredName;

        return $"{c.FirstName} {c.SurName}".Trim();
    }
}