@using CRM.Client.Components.Pages.Authentication
@using Microsoft.AspNetCore.Components.Authorization
@inherits LayoutComponentBase

@inject IJSRuntime JSRuntime
@using CRM.Client.State
@inject AppState AppState

@using CRM.Client.Components.Navigation

@inject IJSRuntime JSRuntime
@inject AppState AppState
@inject CRM.Client.Security.JwtAuthStateProvider JwtProvider

<InitializeAuth />

<div class="main-layout">

    <!-- GLOBAL ALERT -->
    @if (!string.IsNullOrWhiteSpace(AppState.Ui.GlobalMessage))
    {
        <div class="container mt-2">
            <div class="alert @GetAlertClass(AppState.Ui.GlobalMessageType) alert-dismissible fade show d-flex justify-content-between">
                <div>
                    <strong>@(AppState.Ui.GlobalMessageType?.ToUpper() ?? "NOTICE")</strong>
                    <div>@AppState.Ui.GlobalMessage</div>
                </div>
                <button type="button" class="btn-close" @onclick="ClearGlobalMessage"></button>
            </div>
        </div>
    }

    <div class="page">

        <AuthorizeView>
            <Authorized>
                <div class="sidebar">
                    <NavMenu />
                </div>
            </Authorized>
        </AuthorizeView>

        <main>
            <Topbar />

            <article class="content px-4">
                @Body
            </article>
        </main>

    </div>

</div>


@* SweetAlert2 *@
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="js/alertHelper.js"></script>

@code {
    private void ClearGlobalMessage() => AppState.Ui.ClearGlobalMessage();

    private string GetAlertClass(string? level) =>
        level switch
        {
            "success" => "alert-success",
            "warning" => "alert-warning",
            "danger" => "alert-danger",
            "info" => "alert-info",
            _ => "alert-info"
        };

    protected override void OnInitialized()
    {
        AppState.Ui.OnChange += UiStateChanged;
    }

    private void UiStateChanged() => InvokeAsync(StateHasChanged);

            // No need to call initAlerts anymore since crmAlerts is already defined
            // If you use initAlerts(), then add a function inside script
        
}