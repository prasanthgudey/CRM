@inherits LayoutComponentBase

<div class="auth-shell">
    <!-- Left brand / marketing panel -->
    <section class="auth-panel auth-panel-brand">
        <div class="auth-brand-inner">
            <div class="auth-logo-circle">
                CRM
            </div>

            <h1 class="auth-brand-title">CRM Platform</h1>
            <p class="auth-brand-subtitle">Secure Access Portal</p>

            <ul class="auth-brand-points">
                <li>Manage customers and tasks in one place</li>
                <li>Role-based secure access for your team</li>
                <li>Fast insights with audit and activity logs</li>
            </ul>
        </div>
    </section>

    <!-- Right login / auth content -->
    <section class="auth-panel auth-panel-form">
        <div class="auth-form-inner">
            @Body
        </div>
    </section>
</div>
